import rclpy
from rclpy.node import Node
import matplotlib.pyplot as plt
from std_msgs.msg import Int64MultiArray


class Plotter(Node):  # Class for sonars

    def __init__(self):
        self.node_name = "plotter"
        super().__init__(self.node_name)

        self.results = Int64MultiArray()
        timer_period = 0.1  # seconds
        self.timer = self.create_timer(timer_period, self.timer_callback)

        self.sub = self.create_subscription(
            Int64MultiArray,
            '/encoder_data',
            self.data_taker_callback,
            10
        )

    # Callback for subscriber
    def data_taker_callback(self, msg: Int64MultiArray):
        self.results.data = msg.data

        plt.plot(length, data)

        plt.xlabel('Номер измерения')
        plt.ylabel('Напряжение, кванты')

        plt.title("График измерений")

        plt.show()

    # Callback for publisher's timer
    def timer_callback(self):
        self.pub.publish(self.results)


def main(args=None):
    rclpy.init(args=args)

    plotter = Plotter()

    rclpy.spin(plotter)

    plotter.destroy_node()
    rclpy.shutdown()


if __name__ == '__main__':
    main()
